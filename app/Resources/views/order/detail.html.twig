{% extends 'base.html.twig' %}

{% block body %}
    <h1>Objednávka</h1>

    <div class="row">
        <div class="col-sm-12">
            <select>
                <option>Pobočka Praha</option>
                <option>Pobočka Liberec</option>
                <option>Poštou</option>
                <option>Pobočka Hradec</option>
            </select>

            <select>
                <option>Hotově / Karou na prodejně</option>
                <option>Převodem</option>
            </select>
            <button class="btn btn-success" type="submit">Upravit dodání</button>
        </div>
    </div>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-sm-4 col-sm-offset-8 col-lg-4 col-lg-offset-8 col-md-4 col-md-offset-8">
            <a href="{{ path("cart_detail") }}" class="btn btn-primary">Zpět do košíku</a>
            <button class="btn btn-success" type="submit">Potvrdit adresu</button>
        </div>
    </div>

    {{ form_row(form.delivery.firstName) }}
    {{ form_row(form.delivery.lastName) }}
    {{ form_row(form.delivery.street) }}
    {{ form_row(form.delivery.city) }}
    {{ form_row(form.delivery.postCode) }}

    {{ form_end(form) }}
{% endblock %}

