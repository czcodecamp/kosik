{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="active">{{ product.title }}</li>
    </ol>
    <h1> {{ product.title }}</h1>
    <img src="{{ product.image }}" />

    {{ product.description }}

    {{ form_start(form) }}
    {{ form_widget(form.quantity) }} ks
    <button class="btn btn-danger" type="submit">Přidat do košíku</button>
    {{ form_end(form) }}

{% endblock %}