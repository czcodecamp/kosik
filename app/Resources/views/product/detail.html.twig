{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="active">{{ product.title }}</li>
    </ol>
    <h1> {{ product.title }}</h1>
    <img src="{{ product.image }}" />

    <h3></h3>
    <div class="row">
        <div class="col-md-2">
            Pobočka
        </div>
        <div class="col-md-2">
            Skladem
        </div>
        <div class="col-md-2">
            Kdy zboží dostanu
        </div>
    </div>
    {% for warehouseProduct in warehouseProducts %}
        <div class="row">
            <div class="col-md-2">
                {{ warehouseProduct.warehouse.name }}
            </div>
            <div class="col-md-2">
                {{ warehouseProduct.quantity }}
            </div>
            <div class="col-md-2">
                {%if warehouseProduct.quantity > 0 %}
                    Ihned
                {% else %}
                    {{ warehouseProduct.expectedArrival|date('d.m.Y') }}
                {% endif %}
            </div>
        </div>
    {% endfor %}

    {{ product.description }}

    {{ form_start(form) }}
    {{ form_widget(form.quantity) }} ks
    <button class="btn btn-danger" type="submit">Přidat do košíku</button>
    {{ form_end(form) }}

{% endblock %}